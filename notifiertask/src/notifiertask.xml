<?xml version="1.0" encoding="utf-8" ?>
<extension type="plugin" group="task" method="upgrade">
	<name>plg_task_notifiertask</name>
	<author>Bruce Scherzinger</author>
    <creationDate>September 2024</creationDate>
	<copyright>(C) 2004-2024 Bruce Scherzinger, all rights reserved</copyright>
	<license>https://www.gnu.org/licenses/gpl-3.0.html GNU/GPL version 3</license>
	<authorEmail>bruce@scherzinger.org</authorEmail>
	<authorUrl>https://scherzinger.org/</authorUrl>
	<version>5.5</version>
	<description>This plugin implements the 'Task' triggering option for the Content Notifier plugin.
	<![CDATA[<strong>NOTE: REQUIRES THE CONTENT NOTIFIER PLUGIN TO WORK!</strong>]]></description>
	<namespace path="src">Joomla\Plugin\Task\NotifierTask</namespace>
	<files>
		<filename plugin="notifiertask">notifiertask.php</filename>
		<folder>forms</folder>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/plg_task_notifiertask.ini</language>
		<language tag="en-GB">language/en-GB/plg_task_notifiertask.sys.ini</language>
	</languages>
    <updateservers>
        <server type="extension" name="Content Notifier Joomla Plugin Update Site">https://raw.githubusercontent.com/bascherz/Content-Notifier-Joomla-Plugin/master/notifiertask/plg_notifiertask.xml</server>
    </updateservers>
</extension>

